<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- background -->
            <stroke android:color="@color/black" android:width="2dp"/> <!-- border always visible -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:color="@color/black" android:width="2dp"/> <!-- same border for unfocused -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
